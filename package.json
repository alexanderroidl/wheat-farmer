{
  "name": "wheat-farmer",
  "version": "0.0.1",
  "description": "Farming/Tower Defense web-based game",
  "main": "index.js",
  "repository": "git@github.com:alexanderroidl/wheat-farmer.git",
  "author": "Alexander Roidl <alexanderroidl@gmail.com>",
  "homepage": "https://github.com/alexanderroidl/wheat-farmer",
  "keywords": [
    "typescript",
    "farming",
    "towerdefense",
    "browsergame",
    "canvas"
  ],
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "run-script-os": "^1.1.6"
  },
  "scripts": {
    "docker:development": "cross-env DOCKER_BUILD_ENV=development docker-compose -f docker-compose.yml docker-compose.dev.yml up",
  
    "docker:production": "run-script-os",
    "docker:production:win32": "./scripts/build_production.bat && cross-env DOCKER_BUILD_ENV=production docker-compose up",
    "docker:production:default": "bash ./scripts/build_production.sh && DOCKER_BUILD_ENV=production docker-compose up"
  }
}
