{
	"files": [
		"src/ts/index.ts"
	],
	"compilerOptions": {
		"target": "es2018",
		"lib": ["es5", "es6", "es2018", "dom", "dom.iterable"],
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": false,
		"strict": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"baseUrl": "./src/ts",
		"module": "commonjs",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types" : ["node", "offscreencanvas"]
	},
	"include": [
		"src/ts/**/*"
	]
}
